{
  "name": "socket-packet",
  "version": "0.0.7",
  "description": "A nodejs library to wrap TCP/UDP packets between a server and client",
  "main": "./lib/index.js",
  "scripts": {
    "pretest": "./node_modules/.bin/standard | ./node_modules/.bin/snazzy && ./node_modules/.bin/eslint ./src",
    "build": "./node_modules/.bin/babel ./src -d ./lib",
    "prepublishOnly": "npm run tc && npm run build",
    "test": "NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/mocha ./test/",
    "test-with-coverage": "npm run test && NODE_ENV=test ./node_modules/.bin/nyc --reporter=lcov --reporter=text-lcov ./node_modules/.bin/mocha ./test/ | ./node_modules/.bin/codacy-coverage --accountToken=$CODACY_API_TOKEN --username=$CODACY_USERNAME --projectName=socket-packet",
    "tc": "npm run test-with-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gavinvangent/socket-packet.git"
  },
  "keywords": [
    "socket",
    "tcp",
    "udp",
    "packet"
  ],
  "author": "Gavin van Gent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gavinvangent/socket-packet/issues"
  },
  "homepage": "https://github.com/gavinvangent/socket-packet#readme",
  "dependencies": {},
  "devDependencies": {
    "assert": "^1.4.1",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "codacy-coverage": "^3.0.0",
    "eslint": "^4.19.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "pre-commit": "^1.2.2",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": true,
    "include": [
      "src/**/*.js"
    ]
  },
  "pre-commit": [
    "tc"
  ]
}
